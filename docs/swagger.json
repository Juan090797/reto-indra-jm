{
    "swagger": "2.0",
    "info": {
      "title": "API de Citas Médicas",
      "description": "API para gestionar citas médicas",
      "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": ["http", "https"],
    "paths": {
      "/appointments/{id}": {
        "get": {
          "summary": "Obtener detalles de una cita médica",
          "description": "Este endpoint permite obtener los detalles de una cita médica específica",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "ID de la cita médica",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Detalles de la cita médica",
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "123"
                  },
                  "insuredId": {
                    "type": "string",
                    "example": "insured123"
                  },
                  "schedule": {
                    "type": "string",
                    "example": "2025-04-25T10:00:00"
                  },
                  "status": {
                    "type": "string",
                    "example": "PENDING"
                  }
                }
              }
            },
            "404": {
              "description": "Cita médica no encontrada"
            }
          }
        }
      }
    }
  }
  